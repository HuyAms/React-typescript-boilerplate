{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ]
}